<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', {title:'Edición'}) %>

<%- include('partials/header') %> 

<body>
    
    <h1 class="titulo">Película a Editar:  <%= movie.title %></h1>
    <section class="formulario">
        <form action="/edit/<%= movie.id %>?_method=PUT" method="POST">
            <div class="box-form">
                <div class="input-box-form">
                <label for="title">Título </label>
                <input type="text" name="title" id="" value="<%= movie.title %>">
                <span class="error"> <%= locals.errores && errores.title ? errores.title.msg : null %> </span>
                </div>
                <div class="input-box-form">
                <label for="rating">Rating </label>
                <input type="number" name="rating" id="" value="<%= movie.rating %>">
                <span class="error"> <%= locals.errores && errores.rating ? errores.rating.msg : null %> </span>
                </div> 
                <div class="input-box-form">
                <label for="awards">Premios </label>
                <input type="number" name="awards" id="" value="<%= movie.awards %>">
                <span class="error"> <%= locals.errores && errores.awards ? errores.awards.msg : null %> </span>
                </div>
                <div class="input-box-form">
                <label for="release_date">fecha de realización</label>
                <input type="date" name="release_date" id="" value="<%= movie.release_date %>">
                <span class="error"> <%= locals.errores && errores.release_date ? errores.release_date.msg : null %> </span>
                </div>
                <div class="input-box-form">
                <label for="length">Duración</label>
                <input type="number" name="length" id="" value="<%= movie.length %>">
                <span class="error"> <%= locals.errores && errores.length ? errores.length.msg : null %> </span>
                </div>
           
            <br>
            <p> <button class="botonAgregar" type="submit">Actualizar</button>
        
            <a  class="botonVolver" href="/movies">Volver</a></p>
        </form>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>

</html>